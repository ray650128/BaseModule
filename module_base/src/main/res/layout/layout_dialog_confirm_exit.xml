<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="70dp"
    android:layout_marginRight="70dp"
    android:background="@drawable/white_dialog_bg"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        android:paddingTop="33dp"
        android:text="确定退出此账号吗？"
        android:textColor="#ff333333"
        android:textSize="17sp"
        />
    <View
        android:id="@+id/bar1"
        android:background="#cfcfcf"
    android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/tv"
        android:layout_marginBottom="43dp"
        />
    <View
        android:id="@+id/bar2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bar1"
        app:layout_constraintBottom_toBottomOf="@id/tv"
        android:background="#cfcfcf"
        />
    <TextView
        android:id="@+id/tv_cancel"
        app:layout_constraintTop_toBottomOf="@id/bar1"
        app:layout_constraintBottom_toBottomOf="@id/tv"
        app:layout_constraintStart_toStartOf="@id/tv"
        app:layout_constraintEnd_toStartOf="@id/bar2"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="0dp"
        android:text="取消"
        android:textColor="#ff007aff"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/tv_confirm"
        app:layout_constraintTop_toBottomOf="@id/bar1"
        app:layout_constraintBottom_toBottomOf="@id/tv"
        app:layout_constraintStart_toEndOf="@id/bar2"
        app:layout_constraintEnd_toEndOf="@id/tv"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="0dp"
        android:text="确定"
        android:textColor="#ff007aff"
        android:textSize="17sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>