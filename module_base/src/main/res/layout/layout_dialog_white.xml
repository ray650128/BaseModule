<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:background="@drawable/white_corner"
    android:layout_height="128dp">
    <View
        android:id="@+id/bar1"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="1dp"
        android:background="#e2e2e2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        />
    <View
        android:id="@+id/bar2"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="#e2e2e2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
    android:id="@+id/tv_cancel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="@id/bar2"
    app:layout_constraintTop_toTopOf="@id/bar1"
    app:layout_constraintBottom_toBottomOf="parent"
    android:textColor="@android:color/black"
    android:layout_width="wrap_content"
    android:textSize="17sp"
    android:text="取消"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_confirm"
        app:layout_constraintStart_toEndOf="@id/bar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bar1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:textSize="17sp"
        android:text="确认"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_tip"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bar1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="是否确认删除該收藏？"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>