<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="分享到"
        android:textColor="#ff333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_share"
        android:layout_marginLeft="72dp"
        app:layout_constraintTop_toTopOf="@id/tv_share"
        app:layout_constraintBottom_toBottomOf="@id/tv_share"
        android:layout_marginRight="10dp"
        android:background="@color/grey3"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toEndOf="@id/tv_share"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="72dp"
        app:layout_constraintTop_toTopOf="@id/tv_share"
        app:layout_constraintBottom_toBottomOf="@id/tv_share"
        android:layout_marginLeft="10dp"
        android:background="@color/grey3"
        />

    <ImageView
        android:id="@+id/iv_weixin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"

        android:layout_marginTop="33dp"

        android:src="@drawable/weixin"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_share" />

    <ImageView
        android:id="@+id/iv_weibo"

        android:layout_width="60dp"

        android:layout_height="60dp"
        android:src="@drawable/friend_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_weixin"
        app:layout_constraintBottom_toBottomOf="@id/iv_weixin"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <ImageView
        android:id="@+id/iv_qq"
        android:layout_width="60dp"

        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_weixin"
        app:layout_constraintBottom_toBottomOf="@id/iv_weixin"
        app:layout_constraintStart_toEndOf="@id/iv_weibo"

        android:visibility="invisible"
        />
    <!--android:src="@drawable/qq"-->
    <TextView


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信好友"
        app:layout_constraintTop_toBottomOf="@id/iv_weixin"
        app:layout_constraintStart_toStartOf="@id/iv_weixin"
        app:layout_constraintEnd_toEndOf="@id/iv_weixin"
        android:textColor="#ff333333"
        android:layout_marginTop="11dp"
        android:textSize="13sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="朋友圈"
        app:layout_constraintTop_toBottomOf="@id/iv_weibo"
        app:layout_constraintStart_toStartOf="@id/iv_weibo"
        app:layout_constraintEnd_toEndOf="@id/iv_weibo"
        android:textColor="#ff333333"
        android:layout_marginTop="11dp"
        android:textSize="13sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ好友"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/iv_qq"
        app:layout_constraintStart_toStartOf="@id/iv_qq"
        app:layout_constraintEnd_toEndOf="@id/iv_qq"
        android:textColor="#ff333333"
        android:layout_marginTop="11dp"
        android:textSize="13sp"
        />
    <View
        android:id="@+id/line"
        android:background="#cecece"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/iv_weibo"
        android:layout_marginTop="66dp"
        />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
  android:paddingTop="23dp"
        android:gravity="center"
        android:paddingBottom="23dp"
        android:text="取消"
        android:textColor="#ff333333"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />


</androidx.constraintlayout.widget.ConstraintLayout>